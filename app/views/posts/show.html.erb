<h1>POST</h1>
<%= @post.body %>

<%= link_to "Delete Post", @post, method: :delete %>

<br/>
<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <%= link_to "#{comment.body}", post_comment_path(@post, comment.id) %>
  <br/>
<% end %>
<%= link_to "Add Comment", new_post_comment_path(@post) %>

